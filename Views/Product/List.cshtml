@model List<Product>

    <section class="mt-3">
        <div class="container">
            <h3 class="h4 mb-1 mb-lg-3">Product List</h3>
            @if(Model.Count == 0){
                <div class="text-danger">There's no item.</div>
            }
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-2">
                @foreach(var item in Model){
                    <div class="col">
                   @await Html.PartialAsync("Partials/Site/_ProductCard",item)
                </div>
                }
            </div>
        </div>
    </section>