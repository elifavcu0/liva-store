@model AccountEditUserModel
@section Bar {
    <section class="bg-primary p-3">
        <div class="container">
            <nav>
                <ol class="breadcrumb mb-0 ">
                    <li class="breadcrumb-item ">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Home</a>
                    </li>
                    <li class="breadcrumb-item active">
                        <a asp-controller="Account" asp-action="EditUser" class="text-decoration-none">User
                            Information</a>
                    </li>

                </ol>
            </nav>
        </div>
    </section>
}
<section class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group mb-3">
                    <a asp-controller="Account" asp-action="EditUser"
                        class="list-group-item list-group-item-action bg-primary active">
                        My User Information</a>
                    <a asp-controller="Account" asp-action="EditUser" class="list-group-item list-group-item-action">
                        My Address Information</a>
                    <a asp-controller="Order" asp-action="OrderList" class="list-group-item list-group-item-action">
                        My Orders</a>
                    <a asp-controller="Account" asp-action="ChangePassword"
                        class="list-group-item list-group-item-action">
                        Password Update</a>
                </div>
            </div>
            <div class="col-9">
                <div class="card-header py-1 d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-2">My User
                        Information</h5>
                </div>
                <div class="card shadow card-body">
                    <form method="post" novalidate>
                        <div asp-validation-summary="All" class="text-danger">
                        </div>
                        <div class="mb-3">
                            <label asp-for="NameSurname" class="form-label fw-bold"></label>
                            <input asp-for="NameSurname" class="form-control">
                        </div>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold"></label>
                                <input asp-for="Email" class="form-control">
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text" id="phone-prefix">+90 5</span>
                                    <input asp-for="PhoneNumber" class="form-control" type="tel"
                                        placeholder="xx xxx xxxx" />
                                </div>
                            </div>
                        </div>
                        @* <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label"></label>
                            <input asp-for="CurrentPassword" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <input asp-for="NewPassword" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmNewPassword" class="form-label"></label>
                            <input asp-for="ConfirmNewPassword" class="form-control">
                        </div> *@
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}