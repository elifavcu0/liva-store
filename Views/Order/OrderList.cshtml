@using dotnet_store.Data
@model List<Order>
@section Bar {
    <section class="bg-primary p-3">
        <div class="container">
            <nav>
                <ol class="breadcrumb mb-0 ">
                    <li class="breadcrumb-item ">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Home</a>
                    </li>
                    <li class="breadcrumb-item active">
                        <a asp-controller="Account" asp-action="EditUser" class="text-decoration-none">Address
                            Information</a>
                        </li>
                    </ol>
                </nav>
            </div>
        </section>
    }
    <section class="mt-3">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="list-group mb-3">
                        <a asp-controller="Account" asp-action="EditUser" class="list-group-item list-group-item-action">
                            My User Information</a>
                            <a asp-controller="Account" asp-action="EditUser" class="list-group-item list-group-item-action">
                                My Address Information</a>
                                <a asp-controller="Order" asp-action="OrderList"
                                       class="list-group-item list-group-item-action active bg-primary">
                                    My Orders</a>
                                    <a asp-controller="Account" asp-action="ChangePassword"
                                           class="list-group-item list-group-item-action">
                                        Password Update</a>
                                    </div>
                                </div>
                                <div class="col-9">
                                    <div class="card shadow">
                                        <div class="card-header py-1">
                                            <h5 class="card-title mb-0">Orders</h5>
                                        </div>
                                        <div class="card-body">
                                            @if (Model.Count == 0)
                                            {
                                                <div class="alert alert-warning">You don't have an order.</div>
                                            }
                                            else
                                            {
                                                <div class="accordion" id="orders">
                                                    @foreach (var order in Model)
                                                    {
                                                        <div class="accordion-item">
                                                            <h2 class="accordion-header">
                                                                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                                                        data-bs-target="#order_@order.Id">Order Id: #@order.Id</button>
                                                            </h2>
                                                            <div id=order_@order.Id class="accordion-collapse collapse p-3 show"
                                                                 data-bs-parent="#orders">
                                                                <table class="table table-bordered mb-0">
                                                                    <tr>
                                                                        <td colspan="2">Name - Surname</td>
                                                                        <td colspan="2">@order.Name @order.Surname</td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td colspan="2">Delivery Address</td>
                                                                        <td colspan="2">@order.OpenAddress / @order.City / @order.PostalCode /
                                                                            <span>05</span>@order.PhoneNumber / @order.Email</td>
                                                                        </tr>
                                                                        @foreach (var item in order.OrderItems)
                                                                        {
                                                                            <tr>
                                                                                <td style="width: 80px;">
                                                                                    <img src="~/img/@item.Product.Image" alt="" class="img-fluid">
                                                                                    </td>
                                                                                    <td>@item.Product.Name</td>
                                                                                    <td>@item.Price.ToString("C2")</td>
                                                                                    <td><span>x</span>@item.Quantity </td>
                                                                                    <td>@((item.Price*item.Quantity).ToString("C2"))</td>
                                                                                </tr>
                                                                            }

                                                                            <tr>
                                                                                <td colspan="3"></td>
                                                                                <td class="fw-bold">Order Total</td>
                                                                                <td>@order.TotalAmount.ToString("C2")</td>
                                                                            </tr>
                                                                            <tr>
                                                                                <td colspan="3"></td>
                                                                                <td class="fw-bold">Total</td>
                                                                                <td>@((order.TotalAmount+order.TaxAmount).ToString("C2"))</td>
                                                                            </tr>
                                                                        </table>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </section>

                            @section Scripts {
                                @await Html.PartialAsync("_ValidationScriptsPartial")
                            }